  <main>
    <section class="module" id="smartBox">
      <h2>🤖 Smart Task Recommender</h2>
      <blockquote id="smart-suggestion">Boom Boom is analyzing your mood and task logs...</blockquote>
    </section>

    <section class="module" id="dailyBox">
      <h2>📌 Daily Tasks (Must-Do)</h2>
      <ul>
        <li>📗 Read at least half a chapter of <strong>Harry Potter</strong></li>
        <li>📘 Complete 1 <strong>IXL</strong> or <strong>Exact Path</strong> task</li>
        <li>🖋️ Write 5 sentence journal (Chinese or English)</li>
      </ul>
    </section>

    <section class="module" id="boomboomBox">
      <h2>🧙 Boom Boom Talk</h2>
      <p id="boomboom-quote">Loading magical wisdom...</p>
    </section>

    <section class="module" id="optionalBox">
      <h2>🎯 Optional Tasks (Pick 1–2)</h2>
      <ul>
        <li>🎨 Create Procreate artwork + sentence</li>
        <li>💻 Make a page in your Science Notebook</li>
        <li>💃 Exercise 15 min (jump rope/stretch/gym)</li>
        <li>🧽 Clean your space (desk/stationery/bed)</li>
        <li>🧘 Try 3 min meditation or breathing</li>
      </ul>
    </section>
  </main>

  <script>
    const smartPhrases = {
      reading: "Books have been gathering dust — maybe today’s the day for a brave reading spell!",
      moodLow: "I sense your potion of joy needs stirring... how about a magical art quest today?",
      focus: "Even a short journal entry sharpens your wizard brain!",
    };

    const boomPhrases = [
      "Sparkle-tastic work, young owl-in-training!",
      "Boom! Another task exploded into stardust!",
      "Even my feathers are clapping for you!",
      "Your wand of willpower is glowing today!",
      "If learning were food, you just devoured a magical lasagna."
    ];

    const mood = localStorage.getItem('currentMood') || '😐';
    const logs = JSON.parse(localStorage.getItem('wishLog') || '[]');

    let suggestion = smartPhrases.reading;
    if (mood === '😢' || mood === '😠') {
      suggestion = smartPhrases.moodLow;
    } else if (logs.length > 0 && logs[logs.length - 1].mood === '😐') {
      suggestion = smartPhrases.focus;
    }

    document.getElementById('smart-suggestion').textContent = suggestion;
    document.getElementById('boomboom-quote').textContent = boomPhrases[new Date().getDate() % boomPhrases.length];
  </script>
